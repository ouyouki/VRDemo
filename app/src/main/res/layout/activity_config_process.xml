<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.baidu.cloud.mediaproc.sample.ui.shortvideo.viewmodel.ConfigProcessViewModel" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_config_process"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context="com.baidu.cloud.mediaproc.sample.ui.shortvideo.PreviewActivity">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:visibility="@{model.isFragmentAdd?View.GONE:View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:onClick="onClickTopLeft"
                android:orientation="horizontal"
                android:paddingEnd="14dp"
                android:paddingStart="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/cancel"
                    android:src="@mipmap/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="返回"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:onClick="@{model::onClickTopRight}"
                android:orientation="horizontal"
                android:paddingEnd="14dp"
                android:paddingStart="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:text="完成"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/white" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/confirm"
                    android:src="@mipmap/ic_confirm_small" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@{model.isFragmentAdd?@dimen/preview_margin_top_none:@dimen/preview_margin_top_normal}"
            app:layout_constraintBottom_toTopOf="@id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            tools:layout_marginTop="24dp">

            <SurfaceView
                android:id="@+id/surfaceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:visibility="@{model.isInPreviewStep?View.INVISIBLE:View.VISIBLE}"
                tools:src="@drawable/baidu_cloud_bigger" />

            <ImageView
                android:id="@+id/btn_preview_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{model::onClickPreview}"
                android:src="@{model.isPreviewing?@drawable/ic_pause:@drawable/ic_play}"
                android:tint="@android:color/white"
                tools:src="@drawable/ic_play" />

        </FrameLayout>

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:max="@{model.previewProgressMax}"
            android:progress="@{model.previewProgress}"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:visibility="@{model.isFragmentAdd?View.VISIBLE:View.INVISIBLE}"
            app:layout_constraintBottom_toTopOf="@id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:max="100"
            tools:progress="46" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:visibility="@{model.isFragmentAdd?View.INVISIBLE:View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout1"
            app:layout_constraintStart_toStartOf="@+id/frameLayout1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@{model.isPreviewing?@drawable/ic_pause_small:@drawable/ic_play_small}"
                tools:src="@drawable/ic_play_small" />

            <TextView
                android:id="@+id/current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/controller_time_margin_normal"
                android:text="@{model.currentTime}"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                tools:text="00:25" />

            <SeekBar
                android:id="@+id/item_video_seek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="@{model.previewProgressMax}"
                android:maxHeight="3dp"
                android:onStartTrackingTouch="@{model::onStartTrackingTouch}"
                android:onStopTrackingTouch="@{model::onStopTrackingTouch}"
                android:progress="@{model.previewProgress}"
                android:progressDrawable="@drawable/seek_bar_progress"
                android:thumb="@drawable/seek_bar_thumb"
                tools:max="100"
                tools:progress="50" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.endTime}"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                tools:text="00:30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="68dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:visibility="@{model.isFragmentAdd?View.INVISIBLE:View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:contentDescription="图像设置"
                android:onClick="onClickTune"
                android:src="@mipmap/ic_tune" />

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:contentDescription="@string/background_music"
                android:onClick="onClickBGM"
                android:src="@mipmap/ic_music" />

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:contentDescription="@string/custom_filter"
                android:onClick="onClickFilter"
                android:src="@mipmap/ic_filter" />

            <ImageButton
                android:layout_width="28dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent"
                android:contentDescription="@string/beauty_face"
                android:onClick="onClickBeauty"
                android:src="@mipmap/ic_beauty_face" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="148dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>


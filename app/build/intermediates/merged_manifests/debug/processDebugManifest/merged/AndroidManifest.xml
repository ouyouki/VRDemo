<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baidu.cloud.mediaproc.sample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="26" />

    <!-- 读写Sdcard -->

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- SYSTEM_ALERT_WINDOW用于显示录屏直播时的悬浮控制组件所需的权限。因为每次都走向弹窗授权页面，所以暂时关闭，用到的时候再打开 -->
    <!-- <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" /> -->
    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.geosite.ar.LiveRoomActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_streaming"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.shortvideo.ConcatActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.shortvideo.ShortVideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:hardwareAccelerated="true"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.lss.StreamingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_streaming"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.lss.GuestStreamingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_streaming"
            android:screenOrientation="portrait" />

        <service android:name="com.baidu.cloud.mediaproc.sample.ui.lss.ScreenStreamingService" />

        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.shortvideo.PreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.shortvideo.CaptureActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.shortvideo.ConfigProcessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.shortvideo.ProcessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.contest.ContestEntranceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="AR直播答题Demo"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.contest.ContestSplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="AR直播答题Demo"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.baidu.cloud.mediaproc.sample.ui.contest.ContestActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="AR播放Demo"
            android:windowSoftInputMode="adjustPan" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
    </application>

</manifest>